@model User

<h2>Вход на сайт</h2>

<div class="cotainer">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <form asp-action="Login" asp-controller="User" />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group row">
                        <label asp-for="EmailUser" for="Login" class="col-md-4 col-form-label text-md-right">Email</label>
                        <div class="col-md-6">
                            <input asp-for="EmailUser" type="email" id="EmailUser" class="form-control" name="EmailUser" required autofocus>
                            <span asp-validation-for="EmailUser" />
                        </div>
                    </div>

                    <div class="form-group row">
                        <label asp-for="Password" for="password" class="col-md-4 col-form-label text-md-right">Password</label>
                        <div class="col-md-6">
                            <input asp-for="Password" type="password" id="password" class="form-control" name="password" required>
                            <span asp-validation-for="Password" />
                        </div>
                    </div>
                    <div class="col-md-6 offset-md-4">
                        <button type="submit" class="btn btn-primary">Войти</button>
                        <a asp-action="Registration" asp-controller="User" class="btn btn-link">
                            Регистрация
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>