@model IEnumerable<Station>
<h6>Station List</h6>
<div class="row">
    <div class="col-2">Station Name</div>
    <div class="col-2">Region</div>
    <div class="col-2">Country</div>
</div>
@foreach (var station in Model)
{
    <div class="row">
        <div class="col-2">@station.Name</div>
        <div class="col-2">@station.Region</div>
        <div class="col-2">@station.Country</div>
        <div class="col-2">
            <a asp-controller="Station" asp-action="Delete">Delete</a>
        </div>
    </div>
}