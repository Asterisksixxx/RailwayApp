@model RailwayApp.ViewModels.Route_View

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Route</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartRouteDateTime" class="control-label"></label>
                <input asp-for="StartRouteDateTime" class="form-control" />
                <span asp-validation-for="StartRouteDateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndRouteDateTime" class="control-label"></label>
                <input asp-for="EndRouteDateTime" class="form-control" />
                <span asp-validation-for="EndRouteDateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.TrainsList" class="control-label"></label>
                <select multiple="multiple" class="multi-select" id="my_multi_select1" asp-for="@Model.TrainsList" asp-items="ViewBag.ListTrain"></select>
                <span asp-validation-for="@Model.TrainsList" class="text-danger"></span>
            </div> 
            <div class="form-group">
                <label asp-for="@Model.StationList" class="control-label"></label>
                <select multiple="multiple" class="multi-select" id="my_multi_select2" asp-for="@Model.StationList" asp-items="ViewBag.ListStation"></select>
                <span asp-validation-for="@Model.StationList" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
