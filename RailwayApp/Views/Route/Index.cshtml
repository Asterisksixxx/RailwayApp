@model IEnumerable<Route>
<h6>Список маршрутов</h6>
<div class="row border mb-3">
    <div class="col-2">Название маршрута</div>
    <div class="col-2">Время посадки</div>
    <div class="col-2">Время прибытия</div>
    <div class="col-3">
        <a asp-controller="Route" asp-action="Create">Создать новый маршрут</a>
    </div>
</div>
@foreach (var route in Model)
{
    <div class="row border m-2">
        <div class="col-2">@route.Name</div>
        <div class="col-2">@route.StartRouteDateTime.TimeOfDay</div>
        <div class="col-2">@route.EndRouteDateTime.TimeOfDay</div>
    </div>
}